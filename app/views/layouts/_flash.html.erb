<% if flash[:notice] %>
  <div class="container">
    <div class="alert alert-success alert-dismissible" role="alert">
      <%= flash[:notice] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% elsif flash[:alert] %>
  <div class="container">
    <div class="alert alert-danger alert-dismissible" role="alert">
      <%= flash[:alert] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% end %>