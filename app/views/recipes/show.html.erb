<article>
	<header>
		<h1><%= @recipe.name %></h1>
	</header>

	<h2>Tipo</h2>
	<p><%= @recipe.kind %></p>

	<h2>Ingredientes</h2>
	<p><%= @recipe.stuff %></p>
	<h2>Calorias</h2>
	<p><%= @recipe.calories %></p>
	<h3>Modo de Preparo</h3>
	<p><%= @recipe.prepare_mode %></p>
	<h3>Porções:</h3>
	<p><%= pluralize(@recipe.portion, 'porção', 'porções') %></p>	
	<h3>Custo</h3>
	<p><%= @recipe.cost %></p>
</article>
<%= link_to "Voltar", recipes_path %>
<%= link_to "Editar receita", edit_recipe_path(@recipe) %>
<%= link_to "Deletar receita", recipe_path(@recipe), method: :delete, data:{confirm: "Deseja deletar esta receita?"} %>