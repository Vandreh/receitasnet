<h1><%= pluralize(@recipes.size, "Receita", "Receitas") %></h1>

<% @recipes.each do |recipe| %>
	<article>
		<header>
			<!--<h2><%= link_to recipe.name, recipe %></h2> -->
			<h2><%= link_to recipe.name, recipe_path(recipe) %></h2>
			<!--<%= imagem(recipe) %> -->
		</header>
		<h3>Ingredientes:</h3>
		<p><%= truncate(recipe.stuff, length:15, separator:' ') %></p>
		<h3>Calorias:</h3>
		<p><%= formata_caloria(recipe) %></p>
		<h3>Duração:</h3>
		<p><%= recipe.duration.to_formatted_s(:time) %> min</p>
		
		<table>
			<tr>
				<th>
					Modo de Preparo:
				</th>
				<td>
					<%= truncate(recipe.prepare_mode, length:15, separator:' ') %>
				</td>
			</tr>
			<tr>
				<th>Custo:</th>
				<td>
					<%= number_to_currency(recipe.cost) %>
				</td>
			</tr>
		</table>
		<%= link_to "Editar receita", edit_recipe_path(recipe.id) %>
	</article>
<% end %>
</br>
<%= link_to 'Nova receita', new_recipe_path %>